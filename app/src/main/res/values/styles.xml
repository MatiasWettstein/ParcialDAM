<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="textTitle" parent="android:TextAppearance.DeviceDefault">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">20px</item>
        <item name="android:layout_marginLeft">20px</item>
        <item name="android:layout_marginRight">20px</item>
        <item name="android:layout_marginBottom">20px</item>
        <item name="android:padding">30px</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textInput" parent="android:TextAppearance.DeviceDefault">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">20px</item>
        <item name="android:layout_marginRight">20px</item>
        <item name="android:layout_marginBottom">20px</item>
        <item name="android:padding">30px</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">Roboto</item>
    </style>

    <style name="Spinner">
        <item name="android:layout_marginLeft">20px</item>
        <item name="android:layout_marginRight">20px</item>
        <item name="android:layout_marginBottom">20px</item>
        <item name="android:paddingLeft">20px</item>
        <item name="android:paddingRight">20px</item>
    </style>

    <style name="button">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginLeft">20px</item>
        <item name="android:layout_marginRight">20px</item>
        <item name="android:layout_marginBottom">20px</item>
        <item name="android:layout_marginTop">20px</item>
        <item name="android:paddingLeft">20px</item>
        <item name="android:paddingRight">20px</item>
        <item name="android:background">@color/teal_700</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>